{
  "name": "slack-clone-server",
  "version": "1.0.0",
  "description": "The server for slack clone.",
  "main": "index.js",
  "scripts": {
    "watch": "tsc -w & copyfiles -f ./src/views/*.pug ./dist/views",
    "start": "NODE_ENV=production node ./build/index.js",
    "live:server": "NODE_ENV=development nodemon dist/index.js",
    "copy-files:server": "copyfiles -f ./views/*.pug ./build/views & copyfiles ./.env ./build",
    "prod:server": "babel -d ./build ./ -s --ignore node_modules,build,views & npm run copy-files:server",
    "typeorm": "ts-node ./node_modules/typeorm/cli"
  },
  "author": "Craig Stroman",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/express-session": "^1.18.2",
    "@types/ioredis": "^5.0.0",
    "@types/node": "^25.0.2",
    "@types/redis": "^4.0.11",
    "copyfiles": "^2.4.1",
    "dotenv": "^17.2.3",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@urql/exchange-graphcache": "^8.1.0",
    "apollo-server-express": "2.16.1",
    "argon2": "^0.44.0",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "connect-redis": "5.0.0",
    "cors": "^2.8.5",
    "dataloader": "^2.2.3",
    "express": "4.17.1",
    "express-session": "1.17.1",
    "graphql": "15.3.0",
    "graphql-scalars": "1.24.2",
    "graphql-subscriptions": "^3.0.0",
    "ioredis": "^5.9.2",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.19",
    "minimatch": "10.0.3",
    "pg": "^8.3.0",
    "pug": "^3.0.0",
    "reflect-metadata": "0.1.13",
    "shortid": "^2.2.15",
    "subscriptions-transport-ws": "^0.9.17",
    "type-graphql": "1.0.0-rc.3",
    "typeorm": "^0.3.28"
  },
  "repository": "https://github.com/craigstroman/slack-clone-server.git"
}
